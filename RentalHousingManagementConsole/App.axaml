<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:RentalHousingManagementConsole"
             x:Class="RentalHousingManagementConsole.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

   <Application.DataTemplates>
       <local:ViewLocator/>
   </Application.DataTemplates>

   <Application.Styles>
       <FluentTheme />
       <!-- 전역 폰트 설정: 텍스트를 렌더링하는 대표 요소들에만 지정 -->
       <Style Selector="TextBlock">
           <Setter Property="FontFamily" Value="avares://RentalHousingManagementConsole/Resources/Fonts/NotoSansKR-Regular.ttf#Noto Sans KR"/>
       </Style>
       <Style Selector="TextBox">
           <Setter Property="FontFamily" Value="avares://RentalHousingManagementConsole/Resources/Fonts/NotoSansKR-Regular.ttf#Noto Sans KR"/>
       </Style>
     </Application.Styles>
</Application>